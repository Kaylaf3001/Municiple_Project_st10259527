@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Municiple_Project_st10259527</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Municiple_Project_st10259527.styles.css" asp-append-version="true" />

    <style>
        :root {
            --sidebar-width: 250px;
            --topbar-height: 100px;
            --primary-color: #0d2b52;
            --sidebar-bg: #f8f9fa;
            --sidebar-active-bg: #e9ecef;
        }
        
        body {
            padding-top: var(--topbar-height);
            background-color: #f5f7fa;
        }
        
        /* Topbar */
        .topbar {
            background-color: var(--primary-color);
            height: var(--topbar-height);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1030;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        
        /* Timeline Styles */
        .timeline {
            position: relative;
            padding-left: 2rem;
            margin: 0;
        }
        
        .timeline-item {
            position: relative;
            padding-bottom: 2rem;
            padding-left: 2rem;
            border-left: 2px solid #e9ecef;
        }
        
        .timeline-item:last-child {
            padding-bottom: 0;
        }
        
        .timeline-badge {
            position: absolute;
            left: -1rem;
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
        
        .timeline-panel {
            margin-left: 1.5rem;
            padding: 1rem;
            border: 1px solid #e9ecef;
            border-radius: 0.375rem;
            background-color: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.05);
        }
        
        .timeline-title {
            margin-top: 0;
            margin-bottom: 0.5rem;
        }
        
        .topbar .brand {
            display: flex;
            align-items: center;
            gap: 10px;
            color: #fff;
            font-weight: 600;
            font-size: 1.5rem;
            text-decoration: none;
        }
        
        .topbar .brand img {
            width: 120px;
            height: 120px;
        }
        
        /* Sidebar */
        .sidebar {
            width: var(--sidebar-width);
            height: calc(100vh - var(--topbar-height));
            position: fixed;
            left: 0;
            top: var(--topbar-height);
            background-color: var(--sidebar-bg);
            border-right: 1px solid #e3e6f0;
            transition: all 0.3s;
            overflow-y: auto;
            z-index: 1020;
        }
        
        .sidebar.collapsed {
            margin-left: calc(-1 * var(--sidebar-width));
        }
        
        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }
        
        .sidebar-menu .menu-header {
            padding: 1rem 1.5rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #6c757d;
            font-weight: 600;
        }
        
        .sidebar-menu .menu-item {
            position: relative;
        }
        
        .sidebar-menu .menu-link {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            color: #4a5568;
            text-decoration: none;
            transition: all 0.2s;
        }
        
        .sidebar-menu .menu-link:hover,
        .sidebar-menu .menu-link.active {
            background-color: var(--sidebar-active-bg);
            color: var(--primary-color);
        }
        
        .sidebar-menu .menu-icon {
            margin-right: 0.75rem;
            font-size: 1.1rem;
            width: 1.5rem;
            text-align: center;
        }
        
        .sidebar-menu .menu-text {
            font-weight: 500;
        }
        
        .sidebar-menu .badge {
            margin-left: auto;
        }
        
        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 2rem;
            min-height: calc(100vh - var(--topbar-height));
            transition: all 0.3s;
        }
        
        .main-content.expanded {
            margin-left: 0;
        }
        
        /* Responsive */
        @@media (max-width: 992px) {
            .sidebar {
                margin-left: calc(-1 * var(--sidebar-width));
            }
            
            .sidebar.show {
                margin-left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .main-content.expanded {
                margin-left: var(--sidebar-width);
            }
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Topbar -->
    <header class="topbar">
        <div class="d-flex align-items-center">
            <button class="btn btn-link text-white me-3 d-lg-none" id="sidebarToggle">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>
            <a class="brand" asp-controller="Admin" asp-action="Dashboard">
                <img src="~/Images/logo.png" alt="Logo" />
                <span class="d-none d-md-inline">Admin Dashboard</span>
            </a>
        </div>
        
        <div class="d-flex align-items-center">
            <div class="dropdown">
                <button class="btn btn-link text-white dropdown-toggle d-flex align-items-center" 
                        type="button" id="userDropdown" 
                        data-bs-toggle="dropdown" 
                        aria-expanded="false">
                    <i class="bi bi-person-circle me-2" style="font-size: 1.5rem;"></i>
                    <span class="d-none d-md-inline">@User.Identity?.Name</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Profile</a></li>
                    <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Settings</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-controller="User" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="dropdown-item">
                                <i class="bi bi-box-arrow-right me-2"></i>Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <ul class="sidebar-menu">
            <li class="menu-header">Main</li>
            <li class="menu-item">
                <a class="menu-link @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")" 
                   asp-controller="Admin" asp-action="Dashboard">
                    <i class="bi bi-speedometer2 menu-icon"></i>
                    <span class="menu-text">Dashboard</span>
                </a>
            </li>
            
            <li class="menu-header">Reports</li>
            <li class="menu-item">
                <a class="menu-link @(ViewContext.RouteData.Values["Action"].ToString() == "AllReports" ? "active" : "")" 
                   asp-controller="Admin" asp-action="AllReports">
                    <i class="bi bi-list-check menu-icon"></i>
                    <span class="menu-text">All Reports</span>
                    <span class="badge bg-primary rounded-pill ms-auto">@ViewBag.TotalReports</span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link @(ViewContext.RouteData.Values["Action"].ToString() == "PendingReports" ? "active" : "")" 
                   asp-controller="Admin" asp-action="PendingReports">
                    <i class="bi bi-hourglass-split menu-icon"></i>
                    <span class="menu-text">Pending Reports</span>
                    <span class="badge bg-warning text-dark rounded-pill ms-auto">@ViewBag.PendingCount</span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link @(ViewContext.RouteData.Values["Action"].ToString() == "ApprovedReports" ? "active" : "")" 
                   asp-controller="Admin" asp-action="ApprovedReports">
                    <i class="bi bi-check-circle menu-icon"></i>
                    <span class="menu-text">Approved Reports</span>
                    <span class="badge bg-success rounded-pill ms-auto">@ViewBag.ApprovedCount</span>
                </a>
            </li>
            
            <li class="menu-header">Management</li>
            <li class="menu-item">
                <a class="menu-link" href="#">
                    <i class="bi bi-people menu-icon"></i>
                    <span class="menu-text">Users</span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link" href="#">
                    <i class="bi bi-tags menu-icon"></i>
                    <span class="menu-text">Categories</span>
                </a>
            </li>
            <li class="menu-item">
                <a class="menu-link" href="#">
                    <i class="bi bi-gear menu-icon"></i>
                    <span class="menu-text">Settings</span>
                </a>
            </li>
        </ul>
    </aside>
    
    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
            document.getElementById('mainContent').classList.toggle('expanded');
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            
            if (window.innerWidth < 992 && 
                !sidebar.contains(event.target) && 
                !sidebarToggle.contains(event.target) &&
                sidebar.classList.contains('show')) {
                sidebar.classList.remove('show');
                document.getElementById('mainContent').classList.remove('expanded');
            }
        });
        
        // Handle window resize
        window.addEventListener('resize', function() {
            if (window.innerWidth >= 992) {
                document.getElementById('sidebar').classList.remove('show');
                document.getElementById('mainContent').classList.remove('expanded');
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
