@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Municiple_Project_st10259527</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Municiple_Project_st10259527.styles.css" asp-append-version="true" />


    <style>
        /* Custom Header */
        .topbar {
            background-color: #0d2b52;
            height: 100px;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 20px;
        }

            .topbar .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                color: #fff;
                font-weight: 600;
                font-size: 1.5rem;
                text-decoration: none;
            }

                .topbar .brand img {
                    width: 120px;
                    height: 120px;
                }

        .menu-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
        }

            .menu-btn::after {
                display: none !important;
            }

        /* Ensure dropdown aligns nicely with burger button */
        .topbar .dropdown-menu {
            min-width: 180px;
            border-radius: 8px;
        }

            .topbar .dropdown-menu a {
                color: #1A3456;
                font-weight: 500;
            }

    </style>
</head>
<body>
    <!-- Header -->
    <header class="topbar d-flex justify-content-between align-items-center position-relative">
        <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img src="~/Images/logo.png" alt="Logo" />
            Western Cape Connect
        </a>

        <div class="dropdown">
            <button class="menu-btn" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-list"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
                @if (HttpContextAccessor.HttpContext.Session.GetString("IsAdmin") == "true")
                {
                    <!-- Admin: only one dropdown item -->
                    <li><a class="dropdown-item" asp-controller="User" asp-action="Logout">Logout</a></li>
                }
                else
                {
                    <!-- Normal user menu -->
                    <li><a class="dropdown-item" asp-controller="Report" asp-action="ReportIssueStep1">Create a Report</a></li>
                    <li><a class="dropdown-item" href="#">Action 1</a></li>
                    <li><a class="dropdown-item" href="#">Action 2</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" asp-controller="User" asp-action="Logout">Logout</a></li>
                }
            </ul>
        </div>

    </header>


    <!-- Main -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Western Cape Connect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
