@model Municiple_Project_st10259527.ViewModels.UserReportsViewModel

@{
    ViewData["Title"] = "My Reports";
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h2 class="fw-bold text-dark">?? My Reports</h2>
        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <!-- Status Summary Cards (Admin Style) -->
    <div class="row g-4 mb-4">

        <!-- Approved Reports -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="bg-success bg-opacity-10 p-2 rounded">
                            <i class="bi bi-check-circle text-success"></i>
                        </div>
                        <span class="badge bg-success">@Model.ApprovedCount</span>
                    </div>
                    <h5 class="mb-1">Approved</h5>
                    <p class="text-muted mb-0">Reports that have been approved</p>
                </div>
            </div>
        </div>

        <!-- Rejected Reports -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="bg-danger bg-opacity-10 p-2 rounded">
                            <i class="bi bi-x-circle text-danger"></i>
                        </div>
                        <span class="badge bg-danger">@Model.DeniedCount</span>
                    </div>
                    <h5 class="mb-1">Rejected</h5>
                    <p class="text-muted mb-0">Reports that have been rejected</p>
                </div>
            </div>
        </div>

        <!-- In Review Reports -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-2 rounded">
                            <i class="bi bi-hourglass-split text-warning"></i>
                        </div>
                        <span class="badge bg-warning text-dark">@Model.InReviewCount</span>
                    </div>
                    <h5 class="mb-1">In Review</h5>
                    <p class="text-muted mb-0">Reports currently under review</p>
                </div>
            </div>
        </div>

        <!-- Pending Reports -->
        <div class="col-12 col-sm-6 col-xl-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="bg-info bg-opacity-10 p-2 rounded">
                            <i class="bi bi-clock-history text-info"></i>
                        </div>
                        <span class="badge bg-info">@Model.PendingCount</span>
                    </div>
                    <h5 class="mb-1">Pending</h5>
                    <p class="text-muted mb-0">Reports awaiting review</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Table -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">Report History</h6>
        </div>
        <div class="card-body px-3 pt-3">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Report ID</th>
                            <th>Location</th>
                            <th>Category</th>
                            <th>Date Reported</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Reports.Any())
                        {
                            foreach (var report in Model.Reports)
                            {
                                <tr>
                                    <td class="fw-semibold">@report.ReportId</td>
                                    <td>@report.Location</td>
                                    <td>@report.ReportType</td>
                                    <td>@report.ReportDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge rounded-pill @GetStatusBadgeClass(report.Status)">
                                            @report.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("ReportDetails", "Report", new { id = report.ReportId })"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">No reports found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "bg-info text-dark",
            ReportStatus.InReview => "bg-warning text-dark",
            ReportStatus.Approved => "bg-success",
            ReportStatus.Rejected => "bg-danger",
            ReportStatus.Completed => "bg-primary",
            _ => "bg-secondary"
        };
    }
}
