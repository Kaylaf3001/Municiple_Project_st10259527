@{
    ViewData["Title"] = "Dashboard";
}

<style>
    /* General */
    body {
        background-color: #fff;
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.2rem;
    } 

    /* Welcome */
    .welcome-text {
        font-weight: 700;
        color: #1a1a1a;
        margin: 30px 0;
        font-size: 1.8rem;
    }

    /* Stat Cards */
    .stat-card {
        border: 1px solid #cbd5e1;
        border-radius: 10px;
        padding: 25px;
        background: white;
        text-align: center;
    }

        .stat-card h6 {
            font-size: 1.2rem;
            margin-bottom: 12px;
            font-weight: 600;
        }

        .stat-card h3 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #0d2b52;
        }

    /* Action Cards */
    .action-card {
        border: 1px solid #cbd5e1;
        border-radius: 10px;
        padding: 40px 25px;
        background: white;
        transition: 0.3s;
        text-align: center;
    }

        .action-card:hover {
            transform: translateY(-6px);
            box-shadow: 0px 6px 16px rgba(0,0,0,0.15);
        }

        .action-card i {
            font-size: 3.5rem;
            color: #0d2b52;
            margin-bottom: 20px;
        }

        .action-card h6 {
            font-weight: bold;
            font-size: 1.3rem;
            margin-bottom: 12px;
        }

        .action-card p {
            font-size: 1.1rem;
            color: #555;
        }

    /* Footer */
    .footer {
        background-color: #0d2b52;
        color: white;
        margin-top: 60px;
        text-align: center;
        padding: 18px 0;
        font-size: 1.1rem;
    }

    /* Recent Activity Section */
    .recent-activity {
        border-radius: 12px;
        padding: 35px;
    }

        .recent-activity h3 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 25px;
            color: #1a1a1a;
        }

        /* Table Styling */
        .recent-activity table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 1.15rem;
            table-layout: fixed;
        }

            .recent-activity table thead th {
                background-color: #0d2b52;
                color: white;
                font-weight: 700;
                padding: 15px 12px;
                text-align: center;
            }

            .recent-activity table tbody td {
                padding: 14px 12px;
                vertical-align: middle;
                text-align: center;
            }

            .recent-activity table tbody tr:nth-child(even) {
                background-color: #f1f5f9;
            }

            .recent-activity table tbody tr:hover {
                background-color: #e3f2fd;
            }

        .recent-activity .status {
            font-weight: 600;
            color: #ff6f00; 
        }
</style>

<div class="dashboard-container">

    <!-- Welcome -->
    <div class="container mt-4">
        <h2 class="welcome-text">Welcome, @(ViewBag.UserFirstName ?? "User")</h2>

        <!-- Stats Row -->
        <div class="row text-center mb-5">
            <div class="col-md-4">
                <div class="stat-card">
                    <h6>Reports Pending</h6>
                    <h3>@ViewBag.TotalReports</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h6>Upcoming Events</h6>
                    <h3>0</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h6>Open Requests</h6>
                    <h3>0</h3>
                </div>
            </div>
        </div>

        <!-- Action Cards -->
        <div class="row text-center">
            <div class="col-md-4">
                <a href="@Url.Action("ReportIssueStep1", "Report")" style="text-decoration: none; color: inherit;">
                    <div class="action-card">
                        <i class="bi bi-clipboard2-check"></i>
                        <h6>Make a Report</h6>
                        <p>Submit an issue for review</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <div class="action-card" style="cursor:pointer;" onclick="alert('Work in progress')">
                    <i class="bi bi-megaphone"></i>
                    <h6>Local Events & Announcements</h6>
                    <p>Find out whatâ€™s happening in your area</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="action-card" style="cursor:pointer;" onclick="alert('Work in progress')">
                    <i class="bi bi-gear"></i>
                    <h6>Request a Service</h6>
                    <p>Submit a service request online</p>
                </div>
            </div>
        </div>

        <div class="container recent-activity">
            <h3>Recent Activity</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var hasReports = ViewBag.HasRecentReports != null && (bool)ViewBag.HasRecentReports;
                        var reports = ViewBag.RecentReports as IEnumerable<ReportModel>;
                    }
                    @if (hasReports && reports != null)
                    {
                        @foreach (var report in reports)
                        {
                            <tr>
                                <td>@(report.ReportDate.ToString("dd/MM/yyyy"))</td>
                                <td>@(string.IsNullOrEmpty(report.Location) ? "N/A" : report.Location)</td>
                                <td>@(string.IsNullOrEmpty(report.ReportType) ? "N/A" : report.ReportType)</td>
                                <td>@(string.IsNullOrEmpty(report.Description) ? "No description provided" : report.Description)</td>
                                <td class="status">@(report.Status == default ? "Pending" : report.Status.ToString())</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No recent reports found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
