@{
    ViewData["Title"] = "Dashboard";
}

<style>
    /* General */
    body {
        background-color: #fff;
        font-family: 'Segoe UI', sans-serif;
        font-size: 1.2rem; /* base text bigger */
    }

    

    /* Welcome */
    .welcome-text {
        font-weight: 700;
        color: #1a1a1a;
        margin: 30px 0;
        font-size: 1.8rem; /* bigger welcome text */
    }

    /* Stat Cards */
    .stat-card {
        border: 1px solid #cbd5e1;
        border-radius: 10px;
        padding: 25px;
        background: white;
        text-align: center;
    }

        .stat-card h6 {
            font-size: 1.2rem; /* bigger label */
            margin-bottom: 12px;
            font-weight: 600;
        }

        .stat-card h3 {
            font-size: 2.5rem; /* bigger number */
            font-weight: bold;
            color: #0d2b52;
        }

    /* Action Cards */
    .action-card {
        border: 1px solid #cbd5e1;
        border-radius: 10px;
        padding: 40px 25px; /* more space */
        background: white;
        transition: 0.3s;
        text-align: center;
    }

        .action-card:hover {
            transform: translateY(-6px);
            box-shadow: 0px 6px 16px rgba(0,0,0,0.15);
        }

        .action-card i {
            font-size: 3.5rem; /* bigger icons */
            color: #0d2b52;
            margin-bottom: 20px;
        }

        .action-card h6 {
            font-weight: bold;
            font-size: 1.3rem; /* bigger headings */
            margin-bottom: 12px;
        }

        .action-card p {
            font-size: 1.1rem; /* bigger description */
            color: #555;
        }

    /* Footer */
    .footer {
        background-color: #0d2b52;
        color: white;
        margin-top: 60px;
        text-align: center;
        padding: 18px 0;
        font-size: 1.1rem; /* bigger footer text */
    }

    /* Recent Activity Section */
    .recent-activity {

        border-radius: 12px;
        padding: 35px; /* more padding for breathing space */
    }

        .recent-activity h3 {
            font-size: 1.8rem; /* same as welcome */
            font-weight: 700;
            margin-bottom: 25px;
            color: #1a1a1a; /* same as welcome */
        }

        /* Table Styling */
        .recent-activity table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 1.15rem;
            table-layout: fixed; /* improve spacing */
        }

            .recent-activity table thead th {
                background-color: #0d2b52;
                color: white;
                font-weight: 700;
                padding: 15px 12px; /* more padding */
                text-align: center;
                border-radius: 8px 8px 0 0;
            }

            .recent-activity table tbody td {
                padding: 14px 12px;
                vertical-align: middle;
                text-align: center;
            }

            .recent-activity table tbody tr:nth-child(even) {
                background-color: #f1f5f9;
            }

            .recent-activity table tbody tr:hover {
                background-color: #e3f2fd;
            }

        .recent-activity .status {
            font-weight: 600;
            color: #ff6f00; /* pending color */
        }
</style>

<div class="dashboard-container">

    <!-- Welcome -->
    <div class="container mt-4">
        <h2 class="welcome-text">Welcome, User</h2>

        <!-- Stats Row -->
        <div class="row text-center mb-5">
            <div class="col-md-4">
                <div class="stat-card">
                    <h6>Reports Pending</h6>
                    <h3>@ViewBag.TotalReports</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h6>Upcoming Events</h6>
                    <h3>0</h3>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <h6>Open Requests</h6>
                    <h3>0</h3>
                </div>
            </div>
        </div>

        <!-- Action Cards -->
        <div class="row text-center">
            <div class="col-md-4">
                <a href="@Url.Action("ReportIssueStep1", "Report")" style="text-decoration: none; color: inherit;">
                    <div class="action-card">
                        <i class="bi bi-clipboard2-check"></i>
                        <h6>Make a Report</h6>
                        <p>Submit an issue for review</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("LocalEvents", "Home")" style="text-decoration: none; color: inherit;">
                    <div class="action-card">
                        <i class="bi bi-megaphone"></i>
                        <h6>Local Events & Announcements</h6>
                        <p>Find out what’s happening in your area</p>
                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a href="@Url.Action("RequestService", "Home")" style="text-decoration: none; color: inherit;">
                    <div class="action-card">
                        <i class="bi bi-gear"></i>
                        <h6>Request a Service</h6>
                        <p>Submit a service request online</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="container recent-activity">
            <h3>Recent Activity</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.RecentReports != null && ViewBag.RecentReports.Count > 0)
                    {
                        foreach (var report in ViewBag.RecentReports)
                        {
                            <tr>
                                <td>@report.ReportDate.ToString("dd/MM/yyyy")</td>
                                <td>@report.Location</td>
                                <td>@report.ReportType</td>
                                <td>@report.Description</td>
                                <td class="status">@(string.IsNullOrEmpty(report.Status) ? "Pending" : report.Status)</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">No recent reports found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>
