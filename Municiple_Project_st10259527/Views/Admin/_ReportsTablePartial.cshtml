@model Municiple_Project_st10259527.ViewModels.ReportsTableViewModel

<div class="table-responsive">
    <table class="table align-items-center mb-0">
        <thead>
            <tr>
                <th>Report</th>
                <th>Status</th>
                <th class="text-center">Date</th>
                <th class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Reports != null && Model.Reports.Any())
            {
                foreach (var report in Model.Reports)
                {
                    <tr>
                        <td>
                            <div class="d-flex px-2 py-1">
                                <div class="d-flex flex-column justify-content-center">
                                    <h6 class="mb-0 text-sm">@report.ReportType</h6>
                                    <p class="text-xs text-secondary mb-0">@(report.Description.Length > 50 ? report.Description.Substring(0, 50) + "..." : report.Description)</p>
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="badge badge-sm bg-@GetStatusBadgeClass(report.Status)">@report.Status</span>
                        </td>
                        <td class="align-middle text-center">
                            <span class="text-secondary text-xs font-weight-bold">@report.ReportDate.ToString("MMM dd, yyyy")</span>
                        </td>
                        <td class="align-middle text-center">
                            <a href="@Url.Action("Review", new { id = report.ReportId })" class="btn btn-link text-secondary mb-0">
                                <i class="bi bi-eye me-2"></i>View
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center py-4">
                        <div class="d-flex flex-column align-items-center">
                            <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                            <p class="mt-2 mb-0 text-muted">@Model.EmptyMessage</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "warning",
            ReportStatus.InReview => "info",
            ReportStatus.Approved => "primary",
            ReportStatus.Completed => "success",
            ReportStatus.Rejected => "danger",
            _ => "secondary"
        };
    }
}
