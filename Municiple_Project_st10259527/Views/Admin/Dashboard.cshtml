@model Municiple_Project_st10259527.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <h6>Dashboard Overview</h6>
            </div>
            <div class="card-body p-3">
                <div class="row g-4">
                    <div class="col-12 col-sm-6 col-xl-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 p-2 rounded">
                                        <i class="bi bi-flag text-primary"></i>
                                    </div>
                                    <span class="badge bg-primary">@Model.TotalReports Total</span>
                                </div>
                                <h5 class="mb-1">Total Reports</h5>
                                <p class="text-muted mb-0">All time reports submitted</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-sm-6 col-xl-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="bg-warning bg-opacity-10 p-2 rounded">
                                        <i class="bi bi-hourglass-split text-warning"></i>
                                    </div>
                                    <span class="badge bg-warning text-dark">@Model.PendingCount Pending</span>
                                </div>
                                <h5 class="mb-1">Pending Review</h5>
                                <p class="text-muted mb-0">Awaiting initial review</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-sm-6 col-xl-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="bg-info bg-opacity-10 p-2 rounded">
                                        <i class="bi bi-arrow-repeat text-info"></i>
                                    </div>
                                    <span class="badge bg-info text-dark">@Model.InProgressCount In Progress</span>
                                </div>
                                <h5 class="mb-1">In Progress</h5>
                                <p class="text-muted mb-0">Currently being addressed</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-12 col-sm-6 col-xl-3">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div class="bg-success bg-opacity-10 p-2 rounded">
                                        <i class="bi bi-check-circle text-success"></i>
                                    </div>
                                    <span class="badge bg-success">@Model.ApprovedCount Resolved</span>
                                </div>
                                <h5 class="mb-1">Completed</h5>
                                <p class="text-muted mb-0">Successfully resolved</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h6>Quick Links</h6>
                </div>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <div class="col-12 col-sm-6 col-md-3">
                        <a href="@Url.Action("PendingReports", "Admin")" class="text-decoration-none">
                            <div class="card bg-light border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="bg-warning bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                        <i class="bi bi-hourglass-split text-warning" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <h5 class="mb-1">Pending Reports</h5>
                                    <p class="text-muted mb-0">@Model.PendingCount reports awaiting review</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <div class="col-12 col-sm-6 col-md-3">
                        <a href="@Url.Action("ApprovedReports", "Admin")" class="text-decoration-none">
                            <div class="card bg-light border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="bg-success bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                        <i class="bi bi-check-circle text-success" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <h5 class="mb-1">Approved Reports</h5>
                                    <p class="text-muted mb-0">@Model.ApprovedCount approved reports</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <div class="col-12 col-sm-6 col-md-3">
                        <a href="@Url.Action("AllReports", "Admin")" class="text-decoration-none">
                            <div class="card bg-light border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                        <i class="bi bi-list-ul text-primary" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <h5 class="mb-1">All Reports</h5>
                                    <p class="text-muted mb-0">View all reports</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    
                    <div class="col-12 col-sm-6 col-md-3">
                        <a href="#" class="text-decoration-none">
                            <div class="card bg-light border-0 shadow-sm h-100">
                                <div class="card-body text-center">
                                    <div class="bg-info bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px;">
                                        <i class="bi bi-graph-up text-info" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <h5 class="mb-1">Reports Analytics</h5>
                                    <p class="text-muted mb-0">View reports statistics</p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "warning",
            ReportStatus.InReview => "info",
            ReportStatus.Completed => "success",
            ReportStatus.Rejected => "danger",
            _ => "secondary"
        };
    }
}
