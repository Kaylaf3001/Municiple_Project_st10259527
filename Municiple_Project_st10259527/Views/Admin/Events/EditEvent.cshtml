@model Municiple_Project_st10259527.Models.EventModel

@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form asp-action="EditEvent" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Event Title</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Location" class="form-label">Location</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label">Date & Time</label>
        <input asp-for="Date" type="datetime-local" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Category</label>
        <select asp-for="Category" class="form-select">
            <option value="Community">Community</option>
            <option value="Safety">Safety</option>
            <option value="Infrastructure">Infrastructure</option>
            <option value="Culture">Culture</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Status</label>
        <select asp-for="Status" class="form-select">
            <option value="Upcoming">Upcoming</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update Event</button>
    <a asp-action="ManageEvents" class="btn btn-secondary">Cancel</a>
</form>