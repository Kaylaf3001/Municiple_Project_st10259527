@model Municiple_Project_st10259527.Models.ReportModel

@{
    ViewData["Title"] = "Report Details";
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("AllReports")">All Reports</a></li>
            <li class="breadcrumb-item active" aria-current="page">Report #@Model.ReportId</li>
        </ol>
    </nav>
    
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary mb-1">Report #@Model.ReportId</h2>
            <p class="text-muted mb-0">@Model.ReportType</p>
        </div>
        <div>
            <a href="@Url.Action("AllReports")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 py-3">
            <ul class="nav nav-tabs card-header-tabs border-0" id="reportTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active fw-semibold" id="details-tab" data-bs-toggle="tab" 
                            data-bs-target="#details" type="button" role="tab" 
                            aria-controls="details" aria-selected="true">
                        <i class="bi bi-info-circle me-2"></i>Details
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link fw-semibold" id="history-tab" data-bs-toggle="tab" 
                            data-bs-target="#history" type="button" role="tab" 
                            aria-controls="history" aria-selected="false">
                        <i class="bi bi-clock-history me-2"></i>History
                    </button>
                </li>
                @if (Model.Status == ReportStatus.Pending || Model.Status == ReportStatus.InReview)
                {
                    <li class="nav-item ms-auto d-flex align-items-center">
                        <div class="btn-group">
                            @if (Model.Status == ReportStatus.Pending)
                            {
                                <form asp-action="MarkInReview" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@Model.ReportId" />
                                    <button type="submit" class="btn btn-outline-info">
                                        <i class="bi bi-arrow-repeat me-1"></i>Mark In Review
                                    </button>
                                </form>
                            }
                            <button type="button" class="btn btn-outline-danger" 
                                    data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="bi bi-x-circle me-1"></i> Reject
                            </button>
                            <form asp-action="ApproveReport" method="post" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to approve this report?');">
                                <input type="hidden" name="id" value="@Model.ReportId" />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i> Approve
                                </button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        </div>
        
        <div class="card-body p-4">
            <div class="tab-content" id="reportTabsContent">
                <!-- Details Tab -->
                <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
                    <div class="row g-4">
                        <div class="col-lg-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Report Information</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row g-3">
                                        <dt class="col-sm-4 text-muted fw-normal">Status</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge rounded-pill bg-@GetStatusBadgeClass(Model.Status) p-2">@Model.Status</span>
                                        </dd>
                                        
                                        <dt class="col-sm-4 text-muted fw-normal">Reported On</dt>
                                        <dd class="col-sm-8">@Model.ReportDate.ToString("MMMM dd, yyyy 'at' h:mm tt")</dd>
                                        
                                        <dt class="col-sm-4 text-muted fw-normal">Last Updated</dt>
                                        <dd class="col-sm-8">@(Model.UpdatedAt?.ToString("MMMM dd, yyyy 'at' h:mm tt") ?? "N/A")</dd>
                                        
                                        <dt class="col-sm-4 text-muted fw-normal">Location</dt>
                                        <dd class="col-sm-8">@Model.Location</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-6">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-person me-2"></i>Reporter Information</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row g-3">
                                        <dt class="col-sm-4 text-muted fw-normal">Name</dt>
                                        <dd class="col-sm-8">@(Model.User?.FullName ?? "N/A")</dd>
                                        
                                        <dt class="col-sm-4 text-muted fw-normal">Email</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.User?.Email != null)
                                            {
                                                <a href="mailto:@Model.User.Email" class="text-decoration-none">@Model.User.Email</a>
                                            }
                                            else
                                            {
                                                <span>N/A</span>
                                            }
                                        </dd>
                                        
                                        
                            
                            @if (Model.AssignedAdminId.HasValue)
                            {
                                <h5 class="mt-4 mb-3">Assigned Admin</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Admin:</dt>
                                    <dd class="col-sm-8">@(Model.AssignedAdmin?.FullName ?? "N/A")</dd>
                                </dl>
                            }
                        </div>
                    </div>
                    
                    <div class="row mt-4">
                        <div class="col-12">
                            <h5>Description</h5>
                            <div class="border p-3 bg-light rounded">
                                @Model.Description
                            </div>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.AdminNotes))
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5>Admin Notes</h5>
                                <div class="border p-3 bg-light rounded">
                                    @Model.AdminNotes
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <!-- History Tab -->
                <div class="tab-pane fade" id="history" role="tabpanel" aria-labelledby="history-tab">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-badge bg-primary">
                                <i class="bi bi-plus-circle"></i>
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h5 class="timeline-title">Report Created</h5>
                                    <p class="text-muted">
                                        <small>@Model.ReportDate.ToString("f")</small>
                                    </p>
                                </div>
                                <div class="timeline-body">
                                    <p>Report was submitted by @(Model.User?.FullName ?? "a user")</p>
                                </div>
                            </div>
                        </div>
                        
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-badge bg-info">
                                    <i class="bi bi-arrow-repeat"></i>
                                </div>
                                <div class="timeline-panel">
                                    <div class="timeline-heading">
                                        <h5 class="timeline-title">Status Updated</h5>
                                        <p class="text-muted">
                                            <small>@Model.UpdatedAt.Value.ToString("f")</small>
                                        </p>
                                    </div>
                                    <div class="timeline-body">
                                        <p>Status was changed to: <span class="badge bg-@GetStatusBadgeClass(Model.Status)">@Model.Status</span></p>
                                        @if (!string.IsNullOrEmpty(Model.AdminNotes) && Model.Status != ReportStatus.Pending)
                                        {
                                            <div class="alert alert-light mt-2">
                                                <strong>Note:</strong> @Model.AdminNotes
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title text-danger" id="rejectModalLabel">
                    <i class="bi bi-x-circle me-2"></i>Reject Report #@Model.ReportId
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectForm" method="post" asp-action="RejectReport">
                <input type="hidden" name="id" value="@Model.ReportId" />
                <div class="modal-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Warning:</strong> Rejecting this report will notify the reporter and cannot be undone.
                    </div>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label fw-semibold">Reason for rejection <span class="text-danger">*</span></label>
                        <textarea class="form-control" id="rejectionReason" name="rejectionReason" rows="4" required
                                 placeholder="Please provide a detailed reason for rejecting this report..."></textarea>
                        <div class="form-text">This message will be sent to the reporter.</div>
                    </div>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-lg me-1"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle me-1"></i>Confirm Rejection
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .nav-tabs .nav-link {
            color: #6c757d;
            border: none;
            padding: 0.75rem 1.25rem;
            border-radius: 0.25rem 0.25rem 0 0;
            margin-right: 0.25rem;
        }
        
        .nav-tabs .nav-link.active {
            color: #0d2b52;
            background-color: #fff;
            border-bottom: 3px solid #0d2b52;
            font-weight: 600;
        }
        
        .timeline-panel {
            margin-left: 50px;
            padding: 15px;
            border: 1px solid #dee2e6;
            border-radius: 0.25rem;
            background-color: #fff;
        }
        
        .timeline-title {
            margin-top: 0;
            color: inherit;
        }
        
        .timeline-body p:last-child {
            margin-bottom: 0;
        }
    </style>
}

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "warning",
            ReportStatus.InReview => "info",
            ReportStatus.Completed => "success",
            ReportStatus.Rejected => "danger",
            _ => "secondary"
        };
    }
}
