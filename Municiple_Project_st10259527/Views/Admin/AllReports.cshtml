@model IEnumerable<Municiple_Project_st10259527.Models.ReportModel>
@{
    ViewData["Title"] = "All Reports";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 fw-bold text-dark">?? All Reports</h1>
        <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <!-- Report Card -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold text-primary">Report List</h6>
            <div class="dropdown">
                <a class="btn btn-sm btn-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Filter by Status
                </a>
                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="?status=all">All Reports</a></li>
                    <li><a class="dropdown-item" href="?status=Pending">Pending</a></li>
                    <li><a class="dropdown-item" href="?status=InReview">In Review</a></li>
                    <li><a class="dropdown-item" href="?status=Approved">Approved</a></li>
                    <li><a class="dropdown-item" href="?status=Completed">Completed</a></li>
                    <li><a class="dropdown-item" href="?status=Rejected">Rejected</a></li>
                </ul>
            </div>
        </div>

        <!-- Table -->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle" id="dataTable" width="100%">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Type</th>
                            <th>Reported By</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Reported On</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@report.ReportId</td>
                                <td>@report.ReportType</td>
                                <td>@(report.User?.FullName ?? "N/A")</td>
                                <td>@report.Location</td>
                                <td>
                                    <span class="badge rounded-pill @GetStatusBadgeClass(report.Status)">
                                        @report.Status.ToString()
                                    </span>
                                </td>
                                <td>@report.ReportDate.ToString("g")</td>
                                <td class="text-center">
                                    <a href="@Url.Action("ViewReport", "Admin", new { id = report.ReportId })"
                                       class="btn btn-outline-info btn-action me-2" title="View Details">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <style>
        /* Improve spacing and readability */
        .table th, .table td {
            vertical-align: middle;
        }

        .btn-sm {
            border-radius: 8px;
            padding: 4px 10px;
        }

        .badge {
            font-size: 0.8rem;
            padding: 0.5em 0.8em;
        }

        <style >
        /* Bigger and consistent action buttons */
        .btn-action {
            padding: 6px 14px;
            font-size: 0.9rem;
            border-radius: 10px;
        }

        .btn-action i {
            margin-right: 5px;
        }

        .table td {
            vertical-align: middle;
        }
    </style>

    </style>
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                responsive: true,
                order: [[0, 'desc']],
                columnDefs: [
                    { orderable: false, targets: -1 }
                ]
            });
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "bg-warning text-dark",
            ReportStatus.InReview => "bg-info text-dark",
            ReportStatus.Approved => "bg-primary",
            ReportStatus.Rejected => "bg-danger",
            ReportStatus.Completed => "bg-success",
            _ => "bg-secondary"
        };
    }
}
