@model IEnumerable<Municiple_Project_st10259527.Models.ReportModel>

@{
    ViewData["Title"] = "All Reports";
    var statusList = Enum.GetValues<ReportStatus>().Select(s => new SelectListItem
    {
        Text = s.ToString(),
        Value = s.ToString(),
        Selected = (ViewBag.CurrentFilter?.ToString() == s.ToString())
    }).ToList();
    
    // Add an "All" option
    statusList.Insert(0, new SelectListItem("All", "", ViewBag.CurrentFilter == null));
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Reports</h2>
        <div class="filter-section">
            <form asp-action="AllReports" method="get" class="form-inline">
                <div class="input-group">
                    <select name="status" asp-items="statusList" class="form-select" onchange="this.form.submit()">
                    </select>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Reported By</th>
                                <th>Date Reported</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td>@report.ReportId</td>
                                    <td>@report.ReportType</td>
                                    <td>@(report.Description.Length > 30 ? report.Description.Substring(0, 30) + "..." : report.Description)</td>
                                    <td><span class="badge bg-@GetStatusBadgeClass(report.Status)">@report.Status</span></td>
                                    <td>@(report.User?.FullName ?? "N/A")</td>
                                    <td>@report.ReportDate.ToString("g")</td>
                                    <td>@(report.UpdatedAt?.ToString("g") ?? "N/A")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("ReportDetails", new { id = report.ReportId })" 
                                               class="btn btn-sm btn-info" 
                                               title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (report.Status == ReportStatus.Pending || report.Status == ReportStatus.InReview)
                                            {
                                                <form asp-action="ApproveReport" method="post" class="d-inline" 
                                                      onsubmit="return confirm('Are you sure you want to approve this report?');">
                                                    <input type="hidden" name="id" value="@report.ReportId" />
                                                    <button type="submit" class="btn btn-sm btn-success ms-1" title="Approve">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                </form>
                                                <form asp-action="RejectReport" method="post" class="d-inline" 
                                                      onsubmit="return confirm('Are you sure you want to reject this report?');">
                                                    <input type="hidden" name="id" value="@report.ReportId" />
                                                    <button type="button" class="btn btn-sm btn-danger ms-1" 
                                                            title="Reject" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#rejectModal" 
                                                            data-report-id="@report.ReportId">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No reports found.</div>
            }
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reject Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="rejectForm" method="post">
                <div class="modal-body">
                    <input type="hidden" name="id" id="reportId" />
                    <div class="mb-3">
                        <label for="reason" class="form-label">Reason for rejection</label>
                        <textarea class="form-control" id="reason" name="reason" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Report</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle reject button click to set the report ID in the modal
        document.addEventListener('DOMContentLoaded', function() {
            var rejectModal = document.getElementById('rejectModal');
            if (rejectModal) {
                rejectModal.addEventListener('show.bs.modal', function (event) {
                    var button = event.relatedTarget;
                    var reportId = button.getAttribute('data-report-id');
                    var modal = this;
                    modal.querySelector('#reportId').value = reportId;
                    
                    // Set the form action
                    var form = modal.querySelector('form');
                    form.action = '/Admin/RejectReport';
                    
                    // Clear the textarea when modal is shown
                    modal.querySelector('#reason').value = '';
                });
            }
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "warning",
            ReportStatus.InReview => "info",
            ReportStatus.Completed => "success",
            ReportStatus.Rejected => "danger",
            _ => "secondary"
        };
    }
}
