@{
    ViewData["Title"] = "Sign In";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Sign In</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #1A3456;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Main container with two columns */
        .main-container {
            background: white;
            border-radius: 12px;
            display: flex;
            overflow: hidden;
            box-shadow: 0 6px 18px rgba(0,0,0,0.25);
            width: 750px;
            max-width: 95%;
        }

        /* Left section */
        .logo-section {
            background: #16324F;
            color: white;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
        }

            .logo-section img {
                width: 200px;
                height: 200px
                margin-bottom: 20px;
            }

            .logo-section h1 {
                font-size: 22px;
                margin: 0;
            }

        /* Right section (form) */
        .login-section {
            flex: 1;
            padding: 40px;
        }

            .login-section h2 {
                text-align: center;
                margin-bottom: 25px;
            }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                font-size: 14px;
                display: block;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 6px;
            }

        .btn {
            width: 100%;
            padding: 12px;
            background: #1A3456;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            color: white;
            margin-top: 10px;
        }

            .btn:hover {
                background: #16324F;
            }

        .signup-link {
            margin-top: 15px;
            font-size: 14px;
            text-align: center;
        }

            .signup-link a {
                font-weight: bold;
                text-decoration: none;
                color: #1A3456;
            }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Left section: Logo + Text -->
        <div class="logo-section">
            <img src="~/images/logo.png" alt="Logo" /> <!-- replace with your logo path -->
            <h1>Western Cape Connect</h1>
        </div>

        <!-- Right section: Sign in form -->
        <div class="login-section">
            <h2>Sign In</h2>
            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="Email" placeholder="Email@gmail.com" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="Password" placeholder="Password" required />
                </div>
                <button type="submit" class="btn">Sign In</button>
            </form>
            <div class="signup-link">
                Don’t have an account? <a asp-action="SignUp">Sign Up</a>
            </div>
        </div>
    </div>
</body>
</html>
