@model ReportReviewViewModel
@{
    ViewData["Title"] = "Review Report";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h4>Report #@Model.ReportId - @Model.ReportType</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Submitted By:</dt>
                        <dd class="col-sm-8">@Model.SubmittedBy</dd>
                        
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.UserEmail</dd>
                        
                        <dt class="col-sm-4">Report Date:</dt>
                        <dd class="col-sm-8">@Model.ReportDate.ToString("f")</dd>
                        
                        <dt class="col-sm-4">Location:</dt>
                        <dd class="col-sm-8">@Model.Location</dd>
                        
                        <dt class="col-sm-4">Current Status:</dt>
                        <dd class="col-sm-8">
                            <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                        </dd>
                    </dl>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.FilePath))
                {
                    <div class="col-md-6">
                        <h5>Attached File</h5>
                        @if (Model.IsImageFile)
                        {
                            <div class="text-center mb-3">
                                <img src="@Url.Content(Model.FilePath)" alt="Report Image" class="img-fluid img-thumbnail" style="max-height: 200px;" />
                            </div>
                        }
                        <div class="text-center">
                            <a href="@Url.Content(Model.FilePath)" class="btn btn-outline-primary" target="_blank">
                                <i class="fas fa-download"></i> Download @Model.FileName
                            </a>
                        </div>
                    </div>
                }
            </div>
            
            <div class="mt-3">
                <h5>Description</h5>
                <div class="p-3 bg-light rounded">
                    @Html.Raw(Model.Description.Replace("\n", "<br />"))
                </div>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.AdminNotes))
            {
                <div class="mt-3">
                    <h5>Admin Notes</h5>
                    <div class="p-3 bg-light rounded">
                        @Html.Raw(Model.AdminNotes.Replace("\n", "<br />"))
                    </div>
                </div>
            }
        </div>
    </div>
    
    <div class="card">
        <div class="card-header">
            <h5>Update Report Status</h5>
        </div>
        <div class="card-body">
            <form asp-action="UpdateStatus" method="post">
                <input type="hidden" asp-for="ReportId" />
                
                <div class="form-group">
                    <label asp-for="NewStatus">Update Status To</label>
                    <select asp-for="NewStatus" class="form-control">
                        <option value="@ReportStatus.Pending">Pending</option>
                        <option value="@ReportStatus.InReview">In Review</option>
                        <option value="@ReportStatus.Approved">Approved</option>
                        <option value="@ReportStatus.Rejected">Rejected</option>
                        <option value="@ReportStatus.Completed">Completed</option>
                    </select>
                    <span asp-validation-for="NewStatus" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="AdminNotes">Notes (Optional)</label>
                    <textarea asp-for="AdminNotes" class="form-control" rows="3" placeholder="Add any notes or comments here..."></textarea>
                    <span asp-validation-for="AdminNotes" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Status
                    </button>
                    <a asp-action="Reports" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Reports
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "badge-secondary",
            ReportStatus.InReview => "badge-info",
            ReportStatus.Approved => "badge-success",
            ReportStatus.Rejected => "badge-danger",
            ReportStatus.Completed => "badge-primary",
            _ => "badge-secondary"
        };
    }
}
