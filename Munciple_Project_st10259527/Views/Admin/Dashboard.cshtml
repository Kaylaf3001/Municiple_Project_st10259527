@model Municiple_Project_st10259527.ViewModels.AdminDashboardViewModel
@using Municiple_Project_st10259527.Models
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Reports
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalReports</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Pending Reports
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                In Progress
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.InProgressCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Completed
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.CompletedCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Reports Overview -->
    <div class="row">
        <!-- Pending Reports -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-warning">Pending Reports (@Model.PendingCount)</h6>
                    <a asp-action="AllReports" asp-route-status="@ReportStatus.Pending" class="btn btn-sm btn-outline-warning">View All</a>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_ReportListPartial", Model.PendingReports, new ViewDataDictionary(ViewData) { { "Status", ReportStatus.Pending } })
                </div>
            </div>
        </div>

        <!-- In Review Reports -->
        <div class="col-lg-6 mb-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-info">In Review (@Model.InReviewCount)</h6>
                    <a asp-action="AllReports" asp-route-status="@ReportStatus.InReview" class="btn btn-sm btn-outline-info">View All</a>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_ReportListPartial", Model.InReviewReports, new ViewDataDictionary(ViewData) { { "Status", ReportStatus.InReview } })
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Activity</h6>
                    <a asp-action="AllReports" class="btn btn-sm btn-outline-primary">View All Reports</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentReports.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Type</th>
                                        <th>Status</th>
                                        <th>Location</th>
                                        <th>Reported By</th>
                                        <th>Reported On</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var report in Model.RecentReports)
                                    {
                                        <tr>
                                            <td>@report.ReportId</td>
                                            <td>@report.ReportType</td>
                                            <td><span class="badge @GetStatusBadgeClass(report.Status)">@report.Status</span></td>
                                            <td>@report.Location</td>
                                            <td>@(report.User?.FullName ?? "Unknown")</td>
                                            <td>@report.ReportDate.ToString("g")</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="ReportDetails" asp-route-id="@report.ReportId" class="btn btn-info btn-sm" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (report.Status == ReportStatus.Pending)
                                                    {
                                                        <button type="button" class="btn btn-success btn-sm" title="Approve" 
                                                                onclick="updateReportStatus(@report.ReportId, @((int)ReportStatus.Approved))">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-warning btn-sm" title="Mark In Review"
                                                                onclick="updateReportStatus(@report.ReportId, @((int)ReportStatus.InReview))">
                                                            <i class="fas fa-tasks"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-danger btn-sm" title="Reject"
                                                                onclick="showRejectModal(@report.ReportId)">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                    @if (report.Status == ReportStatus.InReview)
                                                    {
                                                        <button type="button" class="btn btn-success btn-sm" title="Approve"
                                                                onclick="updateReportStatus(@report.ReportId, @((int)ReportStatus.Approved))">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-danger btn-sm" title="Reject"
                                                                onclick="showRejectModal(@report.ReportId)">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>No recent activity.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Reject Report Modal -->
    <div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rejectModalLabel">Reject Report</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="rejectForm" method="post" asp-action="RejectReport">
                    <input type="hidden" name="id" id="reportIdToReject" />
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="rejectionReason" class="col-form-label">Reason for rejection:</label>
                            <textarea class="form-control" id="rejectionReason" name="reason" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Reject Report</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Reject Report Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" role="dialog" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="rejectModalLabel">Reject Report</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="rejectForm" method="post" asp-action="RejectReport">
                <input type="hidden" name="id" id="reportIdToReject" />
                <div class="modal-body">
                    <div class="form-group">
                        <label for="rejectionReason" class="col-form-label">Reason for rejection:</label>
                        <textarea class="form-control" id="rejectionReason" name="reason" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject</button>
                </div>
        </div>
    </div>

@section Scripts {
    <script>
        function updateReportStatus(reportId, status) {
            fetch(`/Admin/UpdateReportStatus?reportId=${reportId}&status=${status}`, {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val(),
                    'Content-Type': 'application/json'
                },
                credentials: 'same-origin'
            })
            .then(response => {
                if (response.ok) {
                    window.location.reload();
                } else {
                    alert('Failed to update report status');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating the report status');
            });
        }

        function showRejectModal(reportId) {
            $('#reportIdToReject').val(reportId);
            $('#rejectModal').modal('show');
        }

        // Initialize tooltips
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "badge-warning",
            ReportStatus.InReview => "badge-info",
            ReportStatus.Approved => "badge-primary",
            ReportStatus.Rejected => "badge-danger",
            ReportStatus.Completed => "badge-success",
            _ => "badge-secondary"
        };
    }
}
