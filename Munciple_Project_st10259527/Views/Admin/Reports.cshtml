@model AdminReportsListViewModel
@{
    ViewData["Title"] = "Manage Reports";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    
    <!-- Status Filter Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link @(Model.FilterStatus == null ? "active" : "")" 
                       asp-action="Reports" asp-route-status="">
                        All (@Model.TotalPages)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.FilterStatus == ReportStatus.Pending ? "active" : "")" 
                       asp-action="Reports" asp-route-status="@ReportStatus.Pending">
                        Pending (@Model.PendingCount)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.FilterStatus == ReportStatus.InReview ? "active" : "")" 
                       asp-action="Reports" asp-route-status="@ReportStatus.InReview">
                        In Review (@Model.InReviewCount)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.FilterStatus == ReportStatus.Approved ? "active" : "")" 
                       asp-action="Reports" asp-route-status="@ReportStatus.Approved">
                        Approved (@Model.ApprovedCount)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.FilterStatus == ReportStatus.Rejected ? "active" : "")" 
                       asp-action="Reports" asp-route-status="@ReportStatus.Rejected">
                        Rejected (@Model.RejectedCount)
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.FilterStatus == ReportStatus.Completed ? "active" : "")" 
                       asp-action="Reports" asp-route-status="@ReportStatus.Completed">
                        Completed (@Model.CompletedCount)
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Search Box -->
    <div class="row mb-4">
        <div class="col-12">
            <form method="get" class="form-inline">
                <input type="hidden" name="status" value="@Model.FilterStatus" />
                <div class="input-group w-100">
                    <input type="text" class="form-control" name="searchTerm" value="@Model.SearchTerm" placeholder="Search reports..." />
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Search
                        </button>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.FilterStatus.HasValue)
                        {
                            <a asp-action="Reports" class="btn btn-secondary">Clear</a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Reports Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model.Reports)
                {
                    <tr>
                        <td>@report.ReportId</td>
                        <td>@report.ReportType</td>
                        <td>@(report.Description.Length > 50 ? report.Description.Substring(0, 47) + "..." : report.Description)</td>
                        <td>@report.Location</td>
                        <td>@report.ReportDate.ToString("g")</td>
                        <td>
                            <span class="badge @GetStatusBadgeClass(report.Status)">
                                @report.Status
                            </span>
                        </td>
                        <td>
                            <a asp-action="Review" asp-route-id="@report.ReportId" class="btn btn-sm btn-primary">
                                <i class="fas fa-eye"></i> Review
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Reports pagination">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" 
                           asp-action="Reports" 
                           asp-route-page="@i" 
                           asp-route-status="@Model.FilterStatus"
                           asp-route-searchTerm="@Model.SearchTerm">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@functions {
    string GetStatusBadgeClass(ReportStatus status)
    {
        return status switch
        {
            ReportStatus.Pending => "badge-secondary",
            ReportStatus.InReview => "badge-info",
            ReportStatus.Approved => "badge-success",
            ReportStatus.Rejected => "badge-danger",
            ReportStatus.Completed => "badge-primary",
            _ => "badge-secondary"
        };
    }
}
