@model IEnumerable<Municiple_Project_st10259527.Models.EventModel>
@{
    ViewData["Title"] = "Manage Events";
    Layout = "_AdminLayout";
}

<h2>Manage Events</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="mb-3">
    <a asp-action="CreateEvent" class="btn btn-primary">Create New Event</a>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Location)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Location)</td>
                    <td>@item.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@Html.DisplayFor(modelItem => item.Category)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="EditEvent" asp-route-id="@item.EventId">Edit</a>
                        <form asp-controller="EventsAndAnnouncements" asp-action="DeleteEventConfirmed" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.EventId" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this event?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No events found. Click "Create New Event" to add one.</div>
}