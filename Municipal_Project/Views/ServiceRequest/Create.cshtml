@{
    ViewData["Title"] = "New Service Request";
}
<style>
    .card { border:1px solid #e2e8f0; border-radius:12px; background:#fff; box-shadow:0 2px 8px rgba(0,0,0,.04); }
    .card-header { background:#0d2b52; color:#fff; padding:16px 20px; border-top-left-radius:12px; border-top-right-radius:12px; }
    .card-body { padding:24px; }
    .form-label { font-weight:600; }
</style>
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="m-0">Request a Service</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create" asp-controller="ServiceRequest">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <input name="title" class="form-control" placeholder="e.g. Pothole repair on Main Street" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <textarea name="description" rows="4" class="form-control" placeholder="Add helpful details for the team..."></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text"
                                   name="Location"
                                   placeholder="Example: Blouberg, Cape Town, Western Cape"
                                   list="locationOptions"
                                   autocomplete="off"
                                   required />
                            <datalist id="locationOptions">
                                @foreach (var loc in ViewBag.WesternCapeLocations)
                                {
                                    <option value="@loc"></option>
                                }
                            </datalist>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Category</label>
                            <select name="category" class="form-select">
                                <option value="">Select a category</option>
                                <option>Infrastructure</option>
                                <option>Utilities</option>
                                <option>Electrical</option>
                                <option>Waste</option>
                                <option>Health</option>
                                <option>Safety</option>
                                <option>General</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted">A tracking code will be generated automatically after you submit. Priority is assigned by the municipal team.</small>
                        </div>
                        <div class="d-flex gap-2">
                            <a class="btn btn-outline-secondary" href="@Url.Action("Status","ServiceRequest")">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit Request</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
