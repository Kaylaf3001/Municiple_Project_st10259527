@model Municiple_Project_st10259527.ViewModels.ServiceRequestStatusViewModel
@using System.Linq
@{
    ViewData["Title"] = "Service Request Status";
    Layout = "_Layout";
}

<style>
    .page-container {
        min-height: calc(100vh - 200px);
        padding-bottom: 2rem;
    }

    .action-card {
        border: 1px solid #e2e8f0;
        border-radius: 12px;
        padding: 1.5rem;
        background: #fff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 2px 12px rgba(0,0,0,0.05);
        height: 100%;
    }

        .action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

    .table-responsive {
        border-radius: 0.5rem;
        overflow: hidden;
        box-shadow: 0 0 0 1px rgba(0,0,0,0.03);
        background: white;
    }

    .table {
        margin-bottom: 0;
        width: 100%;
        --bs-table-hover-bg: rgba(13, 43, 82, 0.03);
    }

        .table th {
            background-color: #f8fafc;
            color: #64748b;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            padding: 1rem 1.25rem;
            text-align: left;
            border-bottom: 1px solid #e9ecef;
        }

        .table td {
            padding: 1rem 1.25rem;
            vertical-align: middle;
            border-color: #f1f5f9;
            word-break: break-word;
        }

        .table tbody tr {
            transition: background-color 0.2s, transform 0.2s;
        }

            .table tbody tr:hover {
                background-color: #f8fafc;
                transform: translateX(4px);
            }

    .badge {
        padding: 0.5em 0.8em;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 4px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 100px;
    }

    .header-row {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .welcome-text {
        color: #0d2b52;
        font-weight: 600;
    }

    .tracking-form {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
    }

        .tracking-form .form-control {
            min-width: 200px;
        }

    @@media (max-width: 768px) {
        .header-row {
            flex-direction: column;
            align-items: flex-start;
        }

        .tracking-form {
            flex-direction: column;
            width: 100%;
        }

            .tracking-form .btn {
                width: 100%;
            }
    }
</style>
<div class="container page-container">
    <div class="header-row pt-4">
        <div class="d-flex flex-column">
            <h2 class="welcome-text m-0">Service Request Status</h2>
            <p class="text-muted mb-0" style="font-size: 0.95rem;">Track and manage your service requests</p>
        </div>
        <div>
            <a class="btn btn-primary d-flex align-items-center" href="@Url.Action("Create", "ServiceRequest")">
                <i class="bi bi-plus-lg me-1"></i> New Request
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="recent-activity">
                <!-- Add filter form -->
                <form method="get" asp-action="Status" asp-controller="ServiceRequest" class="mb-4">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label small text-muted mb-1">Status</label>
                            <select name="statusFilter" class="form-select form-select-sm">
                                <option value="" selected>All Statuses</option>
                                @foreach (var status in Enum.GetValues(typeof(ServiceRequestStatus)))
                                {
                                    <option value="@status" selected='@(Context.Request.Query["statusFilter"] == status.ToString())'>
                                        @status
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small text-muted mb-1">Category</label>
                            <select name="categoryFilter" class="form-select form-select-sm">
                                <option value="" selected>All Categories</option>
                                @foreach (var category in (Model?.RequestsTree != null ? Model.RequestsTree.Select(n => n?.Category).Where(c => !string.IsNullOrEmpty(c)).Distinct() : Enumerable.Empty<string>()))
                                {
                                    if (!string.IsNullOrEmpty(category))
                                    {
                                        <option value="@category" selected='@(Context.Request.Query["categoryFilter"] == category)'>
                                            @category
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary btn-sm w-100">
                                <i class="bi bi-funnel"></i> Filter
                            </button>
                        </div>
                        <div class="col-md-2">
                            <a href="@Url.Action("Status", "ServiceRequest")" class="btn btn-outline-secondary btn-sm w-100">
                                <i class="bi bi-x-circle"></i> Clear
                            </a>
                        </div>
                    </div>
                </form>

                
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 180px;">Tracking Code</th>
                                <th>Title</th>
                                <th style="width: 140px;">Category</th>
                                <th style="width: 140px;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model?.RequestsTree?.Root == null)
                            {
                                <tr><td colspan="4" class="text-center py-4">No service requests found.</td></tr>
                            }
                            else
                            {
                                RenderNode(Model.RequestsTree.Root);
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="d-flex flex-column gap-3">
                <div class="action-card">
                    <h5 class="mb-3">Track Another Request</h5>
                    <form method="post" asp-action="Track" asp-controller="ServiceRequest" class="tracking-form">
                        <input name="trackingCode" class="form-control" placeholder="Enter tracking code" required />
                        <button class="btn btn-primary d-flex align-items-center justify-content-center" type="submit">
                            <i class="bi bi-search me-1"></i> Track
                        </button>
                    </form>
                    @if (TempData["TrackFound"] != null)
                    {
                        var found = (bool)TempData["TrackFound"];
                        if (!found)
                        {
                            <div class="alert alert-warning mt-3 mb-0">
                                <i class="bi bi-exclamation-triangle me-2"></i>@(TempData["TrackMessage"] as string)
                            </div>
                        }
                        else
                        {
                            <div class="card mt-3">
                                <div class="card-body">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div>
                                            <div class="fw-semibold">@TempData["TrackTitle"]</div>
                                            <div class="small text-muted">ID: @TempData["TrackId"] â€¢ Submitted: @TempData["TrackSubmittedAt"]</div>
                                        </div>
                                        <span class="badge @GetStatusBadgeClass(Enum.Parse<Municiple_Project_st10259527.Models.ServiceRequestStatus>(TempData["TrackStatus"].ToString()))">@TempData["TrackStatus"]</span>
                                    </div>
                                    <div class="mt-2">
                                        <div class="small text-muted">Tracking Code: @TempData["TrackCode"]</div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                <div class="action-card">
                    <h5 class="mb-3">Next issue to be dealt with</h5>
                    @if (Model?.PriorityHeap == null || Model.PriorityHeap.Count == 0)
                    {
                        <div class="text-center py-3">
                            <i class="bi bi-inbox" style="font-size: 2rem; color: #6c757d;"></i>
                            <p class="mt-2 mb-0 text-muted">No pending requests</p>
                        </div>
                    }
                    else
                    {
                        var top = Model.PriorityHeap.Peek();
                        if (top.Item2 == null)
                        {
                            <div class="text-center py-3">
                                <i class="bi bi-inbox" style="font-size: 2rem; color: #6c757d;"></i>
                                <p class="mt-2 mb-0 text-muted">No pending requests</p>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex align-items-center">
                                <div class="flex-shrink-0 me-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                                        <i class="bi bi-flag text-primary"></i>
                                    </div>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">@top.Item2.Title</h6>
                                    <div class="d-flex align-items-center">
                                        <span class="badge @GetStatusBadgeClass(top.Item2.Status)" style="min-width: auto;">
                                            @top.Item2.Status
                                        </span>
                                        <span class="ms-2 text-muted small">Submitted: @top.Item2.SubmittedAt.ToString("u")</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

                

            </div>
        </div>
    </div>

@functions {
    private void RenderNode(Municiple_Project_st10259527.Services.DataStructures.TreeNode<Municiple_Project_st10259527.Models.ServiceRequestModel> node)
    {
        if (node == null) return;
        var r = node.Value;
        var sf = (string)ViewData["StatusFilter"]; var cf = (string)ViewData["CategoryFilter"];
        bool statusOk = string.IsNullOrWhiteSpace(sf) || r.Status.ToString().Equals(sf, StringComparison.OrdinalIgnoreCase);
        bool categoryOk = string.IsNullOrWhiteSpace(cf) || (!string.IsNullOrWhiteSpace(r.Category) && r.Category.IndexOf(cf, StringComparison.OrdinalIgnoreCase) >= 0);
        if (statusOk && categoryOk)
        {
            <tr>
                <td>
                    <div class="input-group input-group-sm">
                        <input class="form-control" value="@r.TrackingCode" readonly id="code-@r.RequestId" />
                        <button class="btn btn-outline-secondary" type="button" onclick="copyCode('code-@r.RequestId')">Copy</button>
                    </div>
                </td>
                <td>@r.Title</td>
                <td>@(string.IsNullOrWhiteSpace(r.Category) ? "General" : r.Category)</td>
                <td>
                    <span class="badge @GetStatusBadgeClass(r.Status)">@r.Status</span>
                    @{
                        var mq = Model?.QueueAheadIndex?.Find(r.RequestId);
                        // Only show when we have a non-zero total tracked
                        // mq is a nullable value-tuple: (int Ahead, int Total)?
                        // must access .Value or pattern-match before using members
                        if (mq.HasValue && mq.Value.Total > 0)
                        {
                            var ahead = mq.Value.Ahead;
                            var total = mq.Value.Total;
                            <div class="small text-muted mt-1" title="Your place in the current queue for this status.">
                                Position: @(ahead + 1) of @total
                            </div>
                        }
                    }
                </td>
            </tr>
        }
        var child = node.FirstChild;
        while (child != null)
        {
            RenderNode(child);
            child = child.NextSibling;
        }
    }

    private string GetStatusBadgeClass(Municiple_Project_st10259527.Models.ServiceRequestStatus status)
    {
        switch (status)
        {
            case Municiple_Project_st10259527.Models.ServiceRequestStatus.Submitted: return "bg-warning text-dark";
            case Municiple_Project_st10259527.Models.ServiceRequestStatus.InProgress: return "bg-info text-dark";
            case Municiple_Project_st10259527.Models.ServiceRequestStatus.OnHold: return "bg-secondary";
            case Municiple_Project_st10259527.Models.ServiceRequestStatus.Completed: return "bg-success";
            case Municiple_Project_st10259527.Models.ServiceRequestStatus.Cancelled: return "bg-danger";
            default: return "bg-secondary";
        }
    }

}

    <script>
        function copyCode(id) {
            const el = document.getElementById(id);
            if (!el) return;
            el.select();
            el.setSelectionRange(0, 99999);
            try { document.execCommand('copy'); } catch (e) { navigator.clipboard && navigator.clipboard.writeText(el.value); }
        }
    </script>
