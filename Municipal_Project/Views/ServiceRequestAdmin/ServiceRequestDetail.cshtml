@model Municiple_Project_st10259527.Models.ServiceRequestModel
@{
    ViewData["Title"] = "Service Request Details";
    Layout = "_AdminLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Service Request #@Model.RequestId</h4>
                        <span class="badge @(Model.Status == Municiple_Project_st10259527.Models.ServiceRequestStatus.Completed ? "bg-success" : 
                                         Model.Status == Municiple_Project_st10259527.Models.ServiceRequestStatus.InProgress ? "bg-info" : 
                                         "bg-warning") text-dark">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h3 class="h5">@Model.Title</h3>
                        <p class="text-muted mb-0">Submitted on @Model.SubmittedAt.ToString("f")</p>
                        <span class="badge bg-light text-dark">Priority @Model.Priority</span>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Category:</strong> @Model.Category</p>
                                <p><strong>Location:</strong> @Model.Location</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Status:</strong> @Model.Status</p>
                                @if (Model.CompletedAt.HasValue)
                                {
                                    <p><strong>Completed On:</strong> @Model.CompletedAt.Value.ToString("f")</p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Description</h5>
                        <div class="p-3 bg-light rounded">
                            @Model.Description
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="ManageServiceRequest" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="btn-group">
                            @if (Model.Status != Municiple_Project_st10259527.Models.ServiceRequestStatus.Completed)
                            {
                                <form asp-action="CompleteRequest" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.RequestId" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Mark as Completed
                                    </button>
                                </form>
                            }
                            <a asp-action="Edit" asp-route-id="@Model.RequestId" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .card-header {
        padding: 1.25rem 1.5rem;
    }
    
    .card-body {
        padding: 2rem;
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 0.4em 0.8em;
    }
    
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn i {
        font-size: 1.1em;
    }
</style>
