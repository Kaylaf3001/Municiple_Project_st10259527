@model Municiple_Project_st10259527.Models.ServiceRequestModel
@{
    ViewData["Title"] = "Service Request Details";
    Layout = "_AdminLayout";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center g-4">
        <div class="col-12 col-xl-10">
            <!-- Alerts -->
            <div class="alerts-container">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <div>@TempData["SuccessMessage"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@TempData["ErrorMessage"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <!-- Main Card -->
            <div class="card border-0 shadow-sm overflow-hidden mb-4">
                <!-- Card Header -->
                <div class="card-header bg-primary bg-gradient text-white py-3">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
                        <div>
                            <h1 class="h4 mb-1 fw-bold">Service Request #@Model.RequestId</h1>
                            <div class="d-flex align-items-center flex-wrap gap-2">
                                <span class="badge bg-white text-primary fw-normal">
                                    <i class="bi bi-upc-scan me-1"></i> @Model.TrackingCode
                                </span>
                                <span class="badge @GetStatusBadgeClass(Model.Status) text-white">
                                    <i class="@GetStatusIcon(Model.Status) me-1"></i>@Model.Status
                                </span>
                                <span class="badge @GetPriorityBadgeClass(Model.Priority)">
                                    <i class="bi bi-flag-fill me-1"></i>Priority @Model.Priority
                                </span>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-action="ManageServiceRequest" class="btn btn-outline-light btn-sm">
                                <i class="bi bi-arrow-left me-1"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Left Column - Request Details -->
                        <div class="col-lg-8">
                            <!-- Request Header -->
                            <div class="mb-4">
                                <h2 class="h5 mb-2 fw-bold text-dark">@Model.Title</h2>
                                <div class="d-flex flex-wrap align-items-center gap-2 text-muted small mb-3">
                                    <span class="d-flex align-items-center">
                                        <i class="bi bi-calendar3 me-1"></i>
                                        Submitted @Model.SubmittedAt.ToString("f")
                                    </span>
                                    @if (Model.CompletedAt.HasValue)
                                    {
                                        <span class="mx-1">•</span>
                                        <span class="d-flex align-items-center text-success">
                                            <i class="bi bi-check2-circle me-1"></i>
                                            Completed @Model.CompletedAt.Value.ToString("f")
                                        </span>
                                    }
                                </div>

                                <!-- Description -->
                                <div class="card bg-light-subtle border-0 mb-4">
                                    <div class="card-body p-3">
                                        <h6 class="text-uppercase text-muted small fw-bold mb-3">Description</h6>
                                        <div class="text-dark">@Model.Description</div>
                                    </div>
                                </div>

                                <!-- Details Grid -->
                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <div class="p-3 bg-light-subtle rounded-2 h-100">
                                            <div class="text-muted small mb-1">Category</div>
                                            <div class="fw-medium d-flex align-items-center">
                                                <i class="bi bi-tag-fill text-primary me-2"></i>
                                                @Model.Category
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="p-3 bg-light-subtle rounded-2 h-100">
                                            <div class="text-muted small mb-1">Location</div>
                                            <div class="fw-medium d-flex align-items-center">
                                                <i class="bi bi-geo-alt-fill text-primary me-2"></i>
                                                @Model.Location
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Request Stats -->
                                    <div class="col-12">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-header bg-light-subtle py-2">
                                                <h6 class="mb-0 fw-bold"><i class="bi bi-speedometer2 me-2"></i>Request Stats</h6>
                                            </div>
                                            <div class="card-body p-0">
                                                <ul class="list-group list-group-flush">
                                                    @if (Model.CompletedAt.HasValue)
                                                    {
                                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                                            <span class="text-muted small">Resolution Time</span>
                                                            <span class="badge bg-success rounded-pill">@((Model.CompletedAt.Value - Model.SubmittedAt).Days) days</span>
                                                        </li>
                                                    }
                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                        <span class="text-muted small">Last Updated</span>
                                                        <span class="text-muted small">@Model.SubmittedAt.ToString("MMM d, yyyy")</span>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Right Column - Actions -->
                        <div class="col-lg-4">
                            <!-- Status Update Card -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-light-subtle py-3">
                                    <h3 class="h6 mb-0 fw-bold"><i class="bi bi-sliders me-2"></i>Update Request</h3>
                                </div>
                                <div class="card-body">
                                    <form id="updateForm" asp-action="Update" asp-controller="ServiceRequestAdmin" method="post" class="needs-validation" novalidate>
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@Model.RequestId" />
                                        <input type="hidden" id="statusInput" name="status" value="@Model.Status" />
                                        
                                        <div class="mb-3">
                                            <label class="form-label fw-medium small text-muted">Status</label>
                                            <select id="statusSelect" class="form-select form-select-sm" required>
                                                @foreach (var status in Enum.GetValues(typeof(Municiple_Project_st10259527.Models.ServiceRequestStatus)))
                                                {
                                                    <option value="@((int)status)" selected='@((int)status == (int)Model.Status)'>
                                                        @status
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                        
                                        <div class="mb-4">
                                            <label class="form-label fw-medium small text-muted">Priority</label>
                                            <div class="input-group input-group-sm">
                                                <span class="input-group-text bg-light"><i class="bi bi-flag-fill text-primary"></i></span>
                                                <input type="number" 
                                                       class="form-control @GetPriorityInputClass(Model.Priority)" 
                                                       name="priority" 
                                                       min="1" 
                                                       max="5" 
                                                       value="@Model.Priority" 
                                                       required
                                                       onchange="this.className = 'form-control ' + getPriorityClass(this.value);" />
                                            </div>
                                            <div class="form-text small">1 (Lowest) to 5 (Highest)</div>
                                        </div>
                                        
                                        <button id="saveChangesBtn" type="button" class="btn btn-primary w-100 mb-3">
                                            <i class="bi bi-save me-1"></i> Save Changes
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                            <!-- Empty space to maintain layout -->
                            <div class="mt-4"></div>
                        </div>
                        
                        <!-- Complete Request Modal -->
                        <div class="modal fade" id="completeRequestModal" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header bg-light">
                                        <h5 class="modal-title">Complete Service Request</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to mark this request as completed?</p>
                                        <form id="completeRequestForm" asp-action="CompleteRequest" method="post" class="mt-3">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@Model.RequestId" />
                                            <div class="d-flex justify-content-end gap-2">
                                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" class="btn btn-success">
                                                    <i class="bi bi-check-circle me-1"></i> Confirm Complete
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Related Requests Modal -->
<div class="modal fade" id="relatedRequestsModal" tabindex="-1" aria-labelledby="relatedRequestsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="relatedRequestsModalLabel">Related Service Requests</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You might want to check these related service requests next:</p>
                <div id="relatedRequestsList" class="list-group">
                    <!-- Related requests will be inserted here by JavaScript -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a id="viewAllLink" href="@Url.Action("ManageServiceRequest", new { startId = Model.RequestId })" class="btn btn-primary">
                    View All Related
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Auto-hide alerts after 5 seconds
            window.setTimeout(function() {
                $('.alert').fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove(); 
                });
            }, 5000);

            // Status change only syncs hidden input; Save button decides flow
            $('#statusSelect').on('change', function() {
                $('#statusInput').val($(this).val());
            });
            
            // Handle form submission from the modal (fetch and show related recommendations)
            $('#completeRequestForm').on('submit', function(e) {
                e.preventDefault();
                const $form = $(this);
                const $button = $form.find('button[type="submit"]');
                $button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Completing...');

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    dataType: 'json'
                }).done(function(response){
                    const modalEl = document.getElementById('relatedRequestsModal');
                    const relatedList = $('#relatedRequestsList');
                    relatedList.empty();
                    if (response && response.success) {
                        if (response.relatedRequests && response.relatedRequests.length > 0) {
                            response.relatedRequests.forEach(function(request) {
                                relatedList.append(`
                                    <a href="/ServiceRequestAdmin/Detail/${request.id}" class="list-group-item list-group-item-action" target="_blank">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">${escapeHtml(request.title)}</h6>
                                            <span class="badge bg-light text-dark">Priority ${request.priority}</span>
                                        </div>
                                        <p class="mb-1">${escapeHtml(request.category)} • ${escapeHtml(request.location)}</p>
                                        <div class="small text-muted d-flex align-items-center">
                                            <span>Reason: ${escapeHtml(request.reason || 'Related')}</span>
                                            <i class="bi bi-info-circle ms-2" data-bs-toggle="tooltip" title="${escapeHtml(request.reason || 'Related')}"></i>
                                        </div>
                                        <small class="text-muted">Submitted on ${request.submittedAt}</small>
                                    </a>
                                `);
                            });
                            // Init tooltips for new items
                            document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(el => new bootstrap.Tooltip(el));
                        } else {
                            relatedList.append('<div class="list-group-item">No related requests found.</div>');
                        }
                        // Show the related modal to demonstrate data structures
                        bootstrap.Modal.getOrCreateInstance(modalEl).show();
                    } else {
                        alert('Request completed but could not fetch related recommendations.');
                    }
                }).fail(function(){
                    alert('An error occurred while completing the request.');
                }).always(function(){
                    $button.prop('disabled', false).html('<i class="bi bi-check-circle me-1"></i> Confirm Complete');
                });
            });

            // Save button flow: if selecting Completed -> save updates then fetch recommendations; else submit
            $('#saveChangesBtn').on('click', function(e){
                e.preventDefault();
                const selected = $('#statusSelect').val();
                const completedStatusId = @((int)Municiple_Project_st10259527.Models.ServiceRequestStatus.Completed);
                // Sync hidden status input with current selection
                $('#statusInput').val(selected);
                if (parseInt(selected) === completedStatusId){
                    const $updateForm = $('#updateForm');
                    const updateUrl = $updateForm.attr('action');
                    // First persist changes (including priority and status)
                    $.ajax({ url: updateUrl, type: 'POST', data: $updateForm.serialize() })
                        .always(function(){
                            // Then call CompleteRequest to get related items and show the related modal
                            $('#completeRequestForm').trigger('submit');
                        });
                } else {
                    $('#updateForm').trigger('submit');
                }
            });

            // Handle main form submission
            $('#updateForm').on('submit', function(e) {
                e.preventDefault();
                const $form = $(this);
                const $button = $('#saveChangesBtn');
                const originalButtonText = $button.html();
                $button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');
                // Submit the form normally (not via AJAX)
                this.submit();
            });
            
            // Handle modal close
            $('#completeRequestModal').on('hidden.bs.modal', function () {
                // Reset the modal state
                $(this).removeData('new-status');
                const $button = $('#completeRequestForm button[type="submit"]');
                $button.prop('disabled', false).html('<i class="bi bi-check-circle me-1"></i> Confirm Complete');
            });

            // Function to update priority input border color
            window.getPriorityClass = function(priority) {
                switch(parseInt(priority)) {
                    case 1: return 'border-very-low-priority';
                    case 2: return 'border-low-priority';
                    case 3: return 'border-medium-priority';
                    case 4: return 'border-high-priority';
                    case 5: return 'border-urgent-priority';
                    default: return '';
                }
            };
        });
    </script>
    <script>
        function escapeHtml(unsafe) {
            if (!unsafe) return '';
            return unsafe
                .toString()
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
    </script>
}

@functions {
    string GetStatusBadgeClass(Municiple_Project_st10259527.Models.ServiceRequestStatus status)
    {
        return status.ToString() switch
        {
            "Completed" => "bg-success",
            "InProgress" => "bg-info",
            "Cancelled" => "bg-danger",
            "OnHold" => "bg-secondary",
            _ => "bg-warning"
        };
    }
    
    string GetStatusIcon(Municiple_Project_st10259527.Models.ServiceRequestStatus status)
    {
        return status.ToString() switch
        {
            "Completed" => "bi-check-circle-fill",
            "InProgress" => "bi-arrow-repeat",
            "Cancelled" => "bi-x-circle-fill",
            "OnHold" => "bi-pause-fill",
            _ => "bi-hourglass-split"
        };
    }
    
    string GetPriorityBadgeClass(int priority)
    {
        return priority switch
        {
            1 => "bg-very-low-priority",
            2 => "bg-low-priority",
            3 => "bg-medium-priority",
            4 => "bg-high-priority",
            5 => "bg-urgent-priority",
            _ => "bg-secondary"
        };
    }
    
    string GetPriorityInputClass(int priority)
    {
        return priority switch
        {
            1 => "border-very-low-priority",
            2 => "border-low-priority",
            3 => "border-medium-priority",
            4 => "border-high-priority",
            5 => "border-urgent-priority",
            _ => ""
        };
    }
}

