@model Municiple_Project_st10259527.Models.ServiceRequestModel
@{
    ViewData["Title"] = "Service Request Details";
    Layout = "_AdminLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">Service Request #@Model.RequestId</h4>
                        <span class="badge @(Model.Status == Municiple_Project_st10259527.Models.ServiceRequestStatus.Completed ? "bg-success" : 
                                         Model.Status == Municiple_Project_st10259527.Models.ServiceRequestStatus.InProgress ? "bg-info" : 
                                         "bg-warning") text-dark">@Model.Status</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h3 class="h5">@Model.Title</h3>
                        <p class="text-muted mb-0">Submitted on @Model.SubmittedAt.ToString("f")</p>
                        <span class="badge bg-light text-dark">Priority @Model.Priority</span>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Details</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Category:</strong> @Model.Category</p>
                                <p><strong>Location:</strong> @Model.Location</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Status:</strong> @Model.Status</p>
                                @if (Model.CompletedAt.HasValue)
                                {
                                    <p><strong>Completed On:</strong> @Model.CompletedAt.Value.ToString("f")</p>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5 class="mb-3">Description</h5>
                        <div class="p-3 bg-light rounded">
                            @Model.Description
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                        <a asp-action="ManageServiceRequest" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div class="btn-group">
                            @if (Model.Status != Municiple_Project_st10259527.Models.ServiceRequestStatus.Completed)
                            {
                                <form id="completeRequestForm" asp-action="CompleteRequest" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.RequestId" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Mark as Completed
                                    </button>
                                </form>
                            }
                            <a asp-action="Edit" asp-route-id="@Model.RequestId" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Related Requests Modal -->
<div class="modal fade" id="relatedRequestsModal" tabindex="-1" aria-labelledby="relatedRequestsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="relatedRequestsModalLabel">Related Service Requests</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You might want to check these related service requests next:</p>
                <div id="relatedRequestsList" class="list-group">
                    <!-- Related requests will be inserted here by JavaScript -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <a id="viewAllLink" href="@Url.Action("ManageServiceRequest")?startId=@Model.RequestId" class="btn btn-primary">
                    View All Related
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Auto-hide alerts after 5 seconds
        $(document).ready(function() {
            // Auto-hide alerts
            window.setTimeout(function() {
                $('.alert').fadeTo(500, 0).slideUp(500, function(){
                    $(this).remove(); 
                });
            }, 5000);

            // Handle form submission
            $('#completeRequestForm').on('submit', function(e) {
                e.preventDefault();
                
                var $form = $(this);
                var $button = $form.find('button[type="submit"]');
                $button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Completing...');
                
                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    dataType: 'json',
                    success: function(response) {
                        if (response.success) {
                            // Show related requests if any
                            if (response.relatedRequests && response.relatedRequests.length > 0) {
                                var relatedList = $('#relatedRequestsList');
                                relatedList.empty();
                                
                                response.relatedRequests.forEach(function(request) {
                                    relatedList.append(`
                                        <a href="/ServiceRequestAdmin/Detail/${request.id}" 
                                           class="list-group-item list-group-item-action"
                                           target="_blank"
                                           onclick="event.stopPropagation(); window.open(this.href, '_blank'); return false;">
                                            <div class="d-flex w-100 justify-content-between">
                                                <h6 class="mb-1">${escapeHtml(request.title)}</h6>
                                                <span class="badge bg-light text-dark">Priority ${request.priority}</span>
                                            </div>
                                            <p class="mb-1">${escapeHtml(request.category)} â€¢ ${escapeHtml(request.location)}</p>
                                            <div class="small text-muted d-flex align-items-center">
                                                <span>Reason: ${escapeHtml(request.reason || 'Related')}</span>
                                                <i class="bi bi-info-circle ms-2" data-bs-toggle="tooltip" title="${escapeHtml(request.reason || 'Related')}"></i>
                                            </div>
                                            <small class="text-muted">Submitted on ${request.submittedAt}</small>
                                        </a>
                                    `);
                                });
                                // Initialize tooltips for newly added items
                                var tts = [].slice.call(document.querySelectorAll('#relatedRequestsList [data-bs-toggle="tooltip"]'));
                                tts.forEach(function (el) { new bootstrap.Tooltip(el); });
                                
                                // Update the view all link
                                $('#viewAllLink').attr('href', `/ServiceRequestAdmin/ManageServiceRequest?startId=${response.relatedRequests[0].id}`);
                                
                                // Show the modal
                                var modal = new bootstrap.Modal(document.getElementById('relatedRequestsModal'));
                                modal.show();
                                
                                // Redirect after modal is hidden
                                $('#relatedRequestsModal').on('hidden.bs.modal', function () {
                                    window.location.href = response.redirectUrl;
                                });
                            } else {
                                // No related requests, just redirect
                                window.location.href = response.redirectUrl;
                            }
                        } else {
                            alert(response.error || 'An error occurred while completing the request.');
                            $button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> Mark as Completed');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error:', error);
                        alert('An error occurred while processing your request. Please try again.');
                        $button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> Mark as Completed');
                    }
                });
            });
        });
    </script>
    <script>
        function escapeHtml(unsafe) {
            if (!unsafe) return '';
            return unsafe
                .toString()
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
    </script>
}

<style>
    .card {
        border: none;
        border-radius: 10px;
        overflow: hidden;
    }
    
    .card-header {
        padding: 1.25rem 1.5rem;
    }
    
    .card-body {
        padding: 2rem;
    }
    
    .badge {
        font-size: 0.9rem;
        padding: 0.4em 0.8em;
    }
    
    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn i {
        font-size: 1.1em;
    }
</style>
